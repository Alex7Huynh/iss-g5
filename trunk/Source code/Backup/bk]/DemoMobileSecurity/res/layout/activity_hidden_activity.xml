<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text="Your Functions" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/in_hiddenfile"
                android:layout_width="0dip"
                android:layout_height="100dip"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/filetype_sys_dir" />

            <ImageButton
                android:id="@+id/in_settings"
                android:layout_width="0dip"
                android:layout_height="100dip"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/filetype_apk" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chose Your Files to Hide" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/in_picture"
                android:layout_width="0dip"
                android:layout_height="100dip"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/filetype_image" />

            <ImageButton
                android:id="@+id/in_video"
                android:layout_width="0dip"
                android:layout_height="100dip"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/filetype_video" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/in_audio"
                android:layout_width="0dip"
                android:layout_height="100dip"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/filetype_music" />

            <ImageButton
                android:id="@+id/in_file"
                android:layout_width="0dip"
                android:layout_height="100dip"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/filetype_sys_file" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>